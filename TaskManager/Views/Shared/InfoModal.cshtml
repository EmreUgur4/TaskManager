@using TaskManager.WebApp.ViewModels
@model InfoViewModel

@{
    ViewBag.Title = Model.Title;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>

<style>
    .glyphicon.glyphicon-ok {
        color: green;
    }
</style>

<div class="modal-dialog modal-sm">
    <div class="modal-content">
        <div class="modal-header">
            <h5 style="color:teal" class="text-center">
                @Model.Header
            </h5>
        </div>
        <div class="modal-body">
            <div class="row text-center" style="color:green">
                <h2>
                    <span class="glyphicon glyphicon-ok"></span>&nbsp;&nbsp;&nbsp;@Model.Title
                </h2>
            </div>
            <div class="row">
                <p class="text-justify">
                    @foreach (string msg in Model.Items)
                    {
                        @msg<br>
                    }
                </p>
            </div>
        </div>
        <div class="modal-footer">
        </div>
    </div>
</div>

@{
    string js = string.Empty;

    if (Model.IsRedirecting)
    {
        js = "setTimeout(function () { window.location = '" + Model.RedirectingUrl + "'; }, " + Model.RedirectingTimeout + ");";
    }
}

<script>

    $(function () {
        debugger
        @Html.Raw(js);
    });
</script>

