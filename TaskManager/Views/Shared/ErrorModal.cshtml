@using TaskManager.Entities.Messages
@using TaskManager.WebApp.ViewModels
@model ErrorViewModel

@{
    ViewBag.Title = Model.Title;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>

<style>
    .glyphicon.glyphicon-remove-circle {
        color: red;
    }
</style>

<div class="modal-dialog modal-sm">
    <div class="modal-content">
        <div class="modal-header">
            <h2 style="color:red" class="text-center">
                @Model.Header
            </h2>
        </div>
        <div class="modal-body">
            <div class="row text-center">
                <p class="text-justify">
                    <h5>
                        @foreach (ErrorMessageObj msg in Model.Items)
                        {
                            @msg.Message<br>
                        }
                    </h5>
                        
                </p>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="form-control btn btn-danger" data-dismiss="modal" onclick="Close();">Kapat</button>
        </div>
    </div>
</div>

@{
    string js = string.Empty;

    if (Model.IsRedirecting)
    {
        js = "setTimeout(function () { window.location = '" + Model.RedirectingUrl + "'; }, " + Model.RedirectingTimeout + ");";
    }
}

<script>
    function Close() {
        debugger
       @Html.Raw(js);
    }
</script>
