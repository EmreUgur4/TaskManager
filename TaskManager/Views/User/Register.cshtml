@using TaskManager.Entities.ValueObjects
@model RegisterViewModel

<form method="post" enctype="multipart/form-data" asp-controller="User" asp-action="Register">
    <div class="login-box">
        <div class="login-header text-center"><h2 style="color:teal">Kayıt Formu</h2></div>
        <br />
        <div class="login-body">
            <div class="col-md-4 col-md-offset-4">
                <input asp-for="Name" placeholder="Adınız" class="form-control" />
                @Html.ValidationMessage("Name")
                <br />
                <input asp-for="Surname" placeholder="Soyadınız" class="form-control" />
                @Html.ValidationMessage("Surname")
                <br />
                <input asp-for="Email" placeholder="E-posta Adresiniz" class="form-control" />
                @Html.ValidationMessage("Email")
                <br />
                <input asp-for="Password" placeholder="Şifreniz" class="form-control" type="password" />
                @Html.ValidationMessage("Password")
                <br />
                <input asp-for="RePassword" placeholder="Şifreniz(Tekrar)" class="form-control" type="password" />
                @Html.ValidationMessage("RePassword")
                <br />
                <br />
                <button type="submit" class="form-control btn btn-success ">Kayıt Ol</button>
            </div>
            

        </div>
    </div>
</form>